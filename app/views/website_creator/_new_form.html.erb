<%= form_with model: @site do |f| %>
  <div class="mb-3">
    <%= f.label :title, 'Site name', class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :subdomain, 'Your Domain', class: 'form-label' %>
    <div class="input-group">
      <%= f.text_field :subdomain, class: 'form-control' %>
      <span class="input-group-text">.<%= Rails.configuration.root_domain %></span>
    </div>
  </div>

  <%= f.submit 'Create website', class: 'btn btn-primary' %>
<% end %>
