<h4>Mint Page</h4>

<%= form_with model: current_user.site do |f| %>
  <%= hidden_field_tag :from, url_for(controller: 'mint_page') %>

  <div class="mb-3">
    <%= f.label :mint_page_title, 'Title', class: 'form-label' %>
    <%= f.text_field :mint_page_title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :mint_page_content, 'Content', class: 'form-label' %>
    <%= f.text_area :mint_page_content, class: 'form-control', rows: '5' %>
  </div>

  <div class="mb-3">
    <%= f.label :banner, 'Banner image', class: 'form-label' %>
    <% if current_user.site.banner_remote_url %>
      <br>
      <img src="<%= current_user.site.banner_remote_url %>" class="w-50 mb-3 border border-primary-subtle">
    <% end %>
    <%= f.file_field :banner, class: 'form-control' %>
  </div>

  <h5 class="text-primary">Earnings</h5>

  <div class="form-check mb-3">
    <%= f.check_box :free_mint, class: 'form-check-input', onchange: '$(\'#price_container\').toggle();' %>
    <%= f.label :free_mint, 'Free mint?', class: 'form-check-label' %>
  </div>

  <div class="mb-3" id="price_container">
    <%= f.label :price_sol, 'Price (SOL)', class: 'form-label' %>
    <%= f.text_field :price_sol, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :treasury_wallet, 'Earnings Wallet', class: 'form-label' %>
    <%= f.text_field :treasury_wallet, class: 'form-control' %>
  </div>

  <%= f.submit 'Save', class: 'btn btn-primary' %>
<% end %>
