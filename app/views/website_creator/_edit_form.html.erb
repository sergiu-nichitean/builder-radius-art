<%= form_with model: @site do |f| %>
  <h5 class="mt-4 mb-3 text-primary">Site identity</h5>

  <div class="mb-3">
    <%= f.label :title, 'Site name', class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :subdomain, 'Site domain', class: 'form-label' %>
    <div class="input-group">
      <%= f.text_field :subdomain, class: 'form-control' %>
      <span class="input-group-text">.<%= Rails.configuration.root_domain %></span>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :icon, 'Favicon', class: 'form-label' %>
    <% if current_user.site.icon_remote_url %>
      <br>
      <img src="<%= current_user.site.icon_remote_url %>" class="w-25 mb-3 border border-primary-subtle">
    <% end %>
    <%= f.file_field :icon, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :logo, 'Logo', class: 'form-label' %>
    <% if current_user.site.logo_remote_url %>
      <br>
      <img src="<%= current_user.site.logo_remote_url %>" class="w-50 mb-3 border border-primary-subtle">
    <% end %>
    <%= f.file_field :logo, class: 'form-control' %>
  </div>

  <h5 class="mt-4 mb-3 text-primary">Mint page</h5>

  <div class="mb-3">
    <%= f.label :mint_page_title, 'Title', class: 'form-label' %>
    <%= f.text_field :mint_page_title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :mint_page_content, 'Content', class: 'form-label' %>
    <%= f.text_area :mint_page_content, class: 'form-control', rows: '5' %>
  </div>

  <div class="mb-3">
    <%= f.label :banner, 'Banner image', class: 'form-label' %>
    <% if current_user.site.banner_remote_url %>
      <br>
      <img src="<%= current_user.site.banner_remote_url %>" class="w-50 mb-3 border border-primary-subtle">
    <% end %>
    <%= f.file_field :banner, class: 'form-control' %>
  </div>

  <%= render partial: 'layouts/dynamic_fields', locals: { categories: @site.collection.website_field_categories, f: f } %>

  <%= f.submit 'Save', class: 'btn btn-primary' %>
<% end %>
